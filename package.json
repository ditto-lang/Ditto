{
  "private": true,
  "type": "module",
  "dependencies": {
    "prettier": "2.6.0"
  },
  "optionalDependencies": {
    "husky": "8.0.1",
    "lint-staged": "13.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "prettier": "prettier",
    "format": "prettier --write '**/*.{yaml,yml,md,js,ts,json}'",
    "format:check": "prettier --check '**/*.{yaml,yml,md,js,ts,json}'"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "all"
  }
}
